<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
  <display-name>Bug Tracking System</display-name>  
  
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.bugtracker.resources.Login</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>SignUp</servlet-name>
    <servlet-class>com.bugtracker.resources.SignUp</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ReportBug</servlet-name>
    <servlet-class>com.bugtracker.resources.ReportBug</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>SignUp</servlet-name>
    <url-pattern>/SignUp</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ReportBug</servlet-name>
    <url-pattern>/ReportBug</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
     <welcome-file>default.jsp</welcome-file>
   </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>
